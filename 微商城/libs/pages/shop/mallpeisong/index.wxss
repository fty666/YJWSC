.top {
  background: #09bb07;
  position: relative;
  line-height: 80rpx;
}

.user-img {
  border-radius: 50%;
  border: 8rpx solid #07a906;
}

.indent {
  padding: 0 30rpx;
  line-height: 80rpx;
  background: #fff;
}

.place-msg {
  background: #fffaf3;
  padding: 40rpx 30rpx;
  border: 6rpx solid #fff;
  border-image: url(/images/line.png) 4 4 round;
}

.mall-msg, .total {
  padding: 30rpx;
  background: #fff;
}

.mall-msg image {
  width: 100%;
  height: 100%;
}
