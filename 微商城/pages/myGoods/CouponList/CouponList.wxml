<block wx:if="{{glo_is_load}}">
  <view class="glo_load_view">
    <text class="iconfont icon-loading animated infinite rotate mr5"></text>
    <text>正在努力加载</text>
  </view>
</block>
<block wx:else>
  <view class="container">
    <view class="coupon-list" style="height:{{px2rpxHeight*1000}}px;">
      <block wx:if="{{coupon==null}}">
        <view class='fav1'>你的店铺没有优惠活动</view>
        <view class='fav2'>快去添加吧</view>
      </block>
      <block wx:else>
        <view style='width:100%;height:{{px2rpxHeight*1000}}px'>
          <scroll-view scroll-y bindscrolltolower="scrollToLower">
            <block wx:for="{{coupon}}" wx:for-item="coupon" wx:key="{{coupon.couponId}}">
              <view class="item yhqbj" style="height:{{px2rpxHeight*290}}px;">
                <view class="content">
                  <view class="left">
                    <view class="name">¥{{coupon.couponPrice}}</view>
                    <view class="name">{{coupon.shop_name}}</view>
                    <view class="time">开始时间 {{coupon.startTime}}</view>
                    <view class="time">结束时间 {{coupon.endTime}}</view>
                  </view>
                  <view class="right" style="width:{{px2rpxWidth*162}}px;">
                    <button catchtap='delCoupon' class="go mt5" data-index='{{index}}' data-couponid='{{coupon.couponId}}' style="width:{{px2rpxWidth*162}}px;height:{{px2rpxHeight*48}}px;line-height:{{px2rpxHeight*50}}px">删除</button>
                  </view>
                </view>
                <view class="condition" style="height:{{px2rpxHeight*78}}px;">
                  <text class="txt" style="height:{{px2rpxHeight*30}}px;">满¥{{coupon.conditions}}使用</text>
                </view>
              </view>
            </block>
          </scroll-view>
        </view>
      </block>
      <view class='lingquan'>
        <view catchtap='addCoupon' class='button button-caution button-rounded'>添加优惠券</view>
      </view>
    </view>
  </view>
</block>