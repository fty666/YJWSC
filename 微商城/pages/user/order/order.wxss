page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

/*图标  */

.nav {
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  /* height: 88rpx; */
  background-color: #fff;
}

.cate-name-active {
  color: #09bb07;
}

.nav-each {
  display: flex;
  justify-content: center;
  align-items: center;
  /* width: 178rpx;
    height: 88rpx; */
}

.nav-active {
  color: red;
  border-bottom: 3rpx solid red;
}

.orders {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.order {
  margin-top: 20rpx;
  background: #fff;
}

.order .h {
  line-height: 83.3rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #333;
}

.order .h .l {
  float: left;
}

.order .h .r {
  float: right;
  color: #b4282d;
  font-size: 24rpx;
}

.order .goods {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 31.25rpx;
}

.order .goods .img {
  display: flex;
  justify-content: center;
  align-items: center;
}

.order .goods .info {
  /* flex: 1; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 20rpx;
}

.order .goods .name {
  /* margin-top: 30rpx; */
  display: block;
  line-height: 44rpx;
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order .goods .number {
  display: block;
  line-height: 37rpx;
  color: #666;
  font-size: 25rpx;
}

.order .goods .status {
  color: #b4282d;
  font-size: 25rpx;
}

.order .b {
  line-height: 103rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-top: 1px solid #f4f4f4;
  font-size: 25rpx;
  color: #333;
}

.order .b .l {
  float: left;
}

.order .b .d {
  float: left;
  margin-left: 120rpx;
}

.order .b .g {
  float: left;
  margin-left: 50rpx;
}

.order .b .r {
  float: right;
  display: flex;
}

.order .b .btn {
  margin-top: 19rpx;
  margin-left: 30rpx;
  line-height: 64.5rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #fff;
  background: #b4282d;
}

.info {
  width: 100%;
}

.no-order {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 150px;
}
